__lua__
--test de space shooter
function _init()
	p={x=60,y=60,speed=4}
	bullets={}
end

function _update60()
	if btn(➡️)then p.x+=1 end
	if btn(⬅️)then p.x-=1 end
	if btn(⬇️)then p.y+=1 end
	if btn(⬆️)then p.y-=1 end
	if btnp(❎)then shoot() end
	update_bullets()
end

function _draw()
 cls()
 --vaisseau
	spr(1,p.x,p.y)
	--bullets
	for b in all(bullets) do
		spr(2,b.x,b.y)
	end
end

-->8
--bullets
function shoot()
	new_bullet={
		x=p.x,
		y=p.y,
		speed=4
	}
	add(bullets,new_bullet)
end

function update_bullets()
	for b in all(bullets) do
		b.y-=b.speed
	end
end

